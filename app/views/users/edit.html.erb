<% provide(:title, "Password Edit") %>
<div class="col-md-offset-2 mb-4 edit-profile-wrapper">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        <%= form_with model:@user, url: update_password_user_path, local: true, method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :current_password, "現在のパスワード" %>
            <%= f.password_field :current_password, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "新しいパスワード" %>
            <%= f.password_field :password, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "新しいパスワードの確認" %>
            <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
          </div>

          <%= f.submit "変更する", class: "btn btn-primary" %>
        <% end %>
      </div>
      <br>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>

