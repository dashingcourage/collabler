<div class="main">
  <div class="devise-outer register-top">
    <div class="form-wrap">
      <div class="form-group middle-text">
        <h2 class="middle-block">Collabler</h2>
        <p class="text-secondary">他の部署・同僚の写真や動画をチェックしよう</p>
      </div>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="form-group middle-text">
          <%= f.submit "サインインする", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="middle-text">
        <%= link_to user_facebook_omniauth_authorize_path do %>
          <p class="btn btn-outline-primary"><i class="fab fa-facebook"></i> Sign in with Facebook</p>
        <% end %>
      </div>
      <p class="devise-link middle-text">
        アカウントをお持ちでないですか？
        <%= link_to "登録する", new_user_registration_path %>
      </p>
    </div>
  </div>
</div>
